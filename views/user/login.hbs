	{{#if otpLogin}}
		<div class="wrapper" style="background-image: url('images/bg-registration-form-2.jpg'); background-size: cover;">
			<div class="inner d-flex justify-content-center">
				<form action="/user_otp" method="post">
				<img src="/img/logo/logo-crp-2.png" alt="ehrew" class=".img-responsive " style="width: 300px; margin: 0 auto; margin-left: 30px;">
	
					<h3>Log In Form</h3>
					
					<div class="form-wrapper">
						<label for="">Phone</label>
						<input type="number" id="phone" name="phone" class="form-control">
						
					</div>

					{{#if loginErr}}
                    <p class="error text-danger text-center">{{loginErr}}</p>

                	{{/if}}
					<button type="submit" class="buttn mt-3">Get Otp</button>
					<div class="mt-3"><a href="/user_signin" class="adec text-dark">Login With Email & Password</a></div>

                    <div class="mt-3">Dont have account? <a href="/user_signup" class="adec">Create One</a></div>
				</form>
			</div>
		</div>


	{{else}}			
		<div class="wrapper" style="background-image: url('images/bg-registration-form-2.jpg');">
			<div class="inner d-flex justify-content-center">
				<form action="/signin" method="post">
				<img src="/img/logo/logo-crp-2.png" alt="ehrew" class=".img-responsive " style="width: 300px; margin: 0 auto; ">
					<h3>Log In Form</h3>
					
					<div class="form-wrapper">
						<label for="">Email</label>
						<input type="email" id="email" name="email" class="form-control">
						
					</div>
					<div class="form-wrapper">
						<label for="">Password</label>
						<input type="password" id="password" name="password" class="form-control">
					</div>
					{{#if loginErr}}
                    <p class="error text-danger text-center">{{loginErr}}</p>
                {{/if}}
					<button type="submit" class="buttn mt-3">Log In</button>
					<button type="submit" class="buttn btn-light mt-3">
						<a href="/otp_login" class="adec text-dark">Login With Otp</a>
					</button>
					{{!-- <div class="mt-3"><a href="/otp_login" class="adec">Login With Otp</a></div> --}}
                    <div class="mt-3">Dont have account? <a href="/user_signup" class="adec">Create One</a></div>
					
				</form>
			</div>
		</div>

	{{/if}}
