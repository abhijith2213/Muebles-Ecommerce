<link rel="stylesheet" href="/stylesheets/userProfile.css" />

    <div class="col-md-8 mb-3">
<h2>COUPONS</h2>
    {{#each coupons}}
      <div class="coupon p-3 bg-white mb-3">
        <div class="row no-gutters">
          <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center">
                <img src="https://i.imgur.com/XwBlVpS.png"/>
                <span class="d-block">Muebles</span>
                <span class="text-black-50">Coupons</span>
                <span class="mt-3">Expiry Date:</span>
              <span class="ml-2 text-danger">{{this.endDate}}</span>
            </div>
          </div>
          <div class="col-md-8">
            <div>
            <div class="d-flex flex-row  off px-3 p-2">
              <h4 class="ml-2  ">{{this.couponName}}</h4>
            </div>
            <div class="d-flex flex-row  off px-3 p-2">
              <span>minAmount:</span>
              <span class="ml-2 text-info">{{this.minAmount}}</span>
               <span class="ml-3">maxAmount:</span>
              <span class="ml-2 text-info">{{this.maxAmount}}</span>
            </div>
         
            <div class="d-flex flex-row  off px-3 p-2">
              
            </div>
             
              <div class="d-flex flex-row justify-content-end off">
                <h1>{{this.offer}}%</h1><span>OFF</span></div>
              <div class="d-flex flex-row justify-content-between off px-3 p-2">
                <span>Coupon code:</span>
                <span id="{{this.couponId}}cpn" class="border border-success px-3 rounded code">{{this.couponId}}</span>
                {{!-- <a class="text-dark"><i class="bi bi-clipboard-check"></i></a> --}}
            </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
    </div>
    </div>
    </div>


<style>


  .coupon{
    border-radius: 12px;box-shadow: 5px 8px 10px #d6d5d533
    }

  .code:hover{
    background:green;color: #fff;
    cursor: pointer
    }
</style>

<script>
   let cpn = document.getElementById('{{coupons.couponId}}cpn')

   cpn.onclick = function(){
    navigator.clipboard.writeText(cpn.innerHTML)
  alertify.set('notifier','position', 'top-center');
 alertify.success('Coupon copied to clipbaord! ');
   }
    
</script>