<main>

  <!-- breadcrumb-area -->
  <section
    class="breadcrumb-area breadcrumb-bg"
    data-background="/img/bg/interior-armchair.jpg"
  >
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="breadcrumb-content">
            <h2>Shop Sidebar</h2>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Shop</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- breadcrumb-area-end -->

  <!-- shop-area -->
  <section class="shop-area pt-100 pb-100">
    <div class="container">
      <div class="row">
        <div class="col-xl-9 col-lg-8">

          <div class="row">
            {{#each product}}
              <div class="col-xl-4 col-sm-6">
                <div class="new-arrival-item text-center mb-50">
                  <div class="thumb mb-25">
                    {{#if this.offerPercentage}}
                        <div class="discount-tag new">- {{this.offerPercentage}}%</div>
                    {{/if}}
                    <a href="/product-details/{{this._id}}"><img
                        src="/imageUploads/{{this.images.[0]}}"
                        alt=""
                        style="height:344px ; width:296px ;"
                      /></a>
                    <div class="product-overlay-action">
                      <ul>
                        <li><a style="color: white;" id="wishlistbtn" onclick="addToWishlist('{{this._id}}')"><i class="far fa-heart"></i></a></li>
                        <li><a href=""><i class="far fa-eye"></i></a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="content">
                    <h5><a
                        href="/product-details/{{this._id}}">{{this.Product}}</a></h5>
                      {{#if this.orginalPrice}}
                            <span class="price">₹{{this.price}}</span>
                            <span class="price text-danger"><del>₹{{this.orginalPrice}}</del></span>
                      {{else}}
                           <span class="price">₹{{this.price}}</span>
                      {{/if}}
                  </div>
                </div>
              </div>
            {{/each}}

          </div>
         
        </div>
        <div class="col-xl-3 col-lg-4">
          <aside class="shop-sidebar">

            <div class="widget">
              <h4 class="widget-title">Product Categories</h4>
              <div class="shop-cat-list">
                {{#each categories}}
                  <ul>
                    <li><a href="/categoryproduct/{{this._id}}">{{this.category}}</a></li>

                  </ul>
                {{/each}}
              </div>
            </div>
            
          

          </aside>
        </div>
      </div>
    </div>
  </section>
  <!-- shop-area-end -->

</main>