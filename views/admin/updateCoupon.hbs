<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-template="vertical-menu-template-free"
>
  <div class="layout-page">
    <div
      class="table-top d-flex justify-content-center align-items-center"
      style="margin-top: 30px;min-height: 25rem;
        width: -webkit-fill-available; background-image: url('/images/bg-registration-form-2.jpg');"
    >

      <div style="width: 20rem; margin: 10px;">
        {{#if resErr}}
          {{!-- <p class="error text-danger text-center">{{resMsg}}</p> --}}
          <div
            class="alert alert-warning d-flex align-items-center"
            role="alert"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              fill="currentColor"
              class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"
              viewBox="0 0 16 16"
              role="img"
              aria-label="Warning:">
              <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
              ></path>
            </svg>

            <div>
              {{resErr}}
            </div>
          </div>

        {{/if}}
        {{#if resMsg}}

          <div
            class="alert alert-success d-flex align-items-center"
            role="alert">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-check2-circle"
              viewBox="0 0 16 16">

              <path
                d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"
              ></path>
              <path
                d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"
              ></path>
            </svg>
            <div>
              {{resMsg}}
            </div>
          </div>

        {{/if}}

        <form
          action="/admin/coupons/update/{{coupon._id}}"
          method="post">
          <!-- Coupon name input -->
           <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Coupon Name</label>
            <input
              type="name"
              value="{{coupon.couponName}}"
              name="couponName"
              id="form2Example1"
              class="form-control"
              required/>
          </div>

           <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Offer</label>
            <input
            placeholder="in percentage"
              type="name"
              name="offer"
              value="{{coupon.offer}}"
              id="form2Example1"
              class="form-control"
              required/>
          </div>

           <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Min Amount</label>
            <input
              type="number"
              value="{{coupon.minAmount}}"
              name="minAmount"
              id="form2Example1"
              class="form-control"
              required/>
          </div>

           <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Max Amount</label>
            <input
              type="number"
              value="{{coupon.maxAmount}}"
              name="maxAmount"
              id="form2Example1"
              class="form-control"
              required/>
          </div>

           <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">End Date</label>
            <input
              type="date"
              value="{{coupon.endDate}}"
              name="endDate"
              id="form2Example1"
              class="form-control"
              required/>
          </div>

            <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Status</label>
           <select name="status" id="status"  id="form2Example1"
              class="form-control">
            <option value="{{coupon.status}}" selected hidden>{{coupon.status}}</option>
            <option value="true">active</option>
            <option value="false">deactive</option>
           </select>
          </div>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-block mb-4">Update Coupon</button>

        </form>
      </div>
    </div>
  </div>
</html>