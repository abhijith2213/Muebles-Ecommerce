<div class="layout-page ">
   <div class="table-top" style="margin-top: 30px;
    width: -webkit-fill-available;">
<div class="table-responsive">
<table class="table table-hover table-primary table-bordered text-center pt-2" id="datatable">
     <thead >
    <tr>
      <th scope="col">Index</th>
      <th scope="col">Categorie</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  
    <tbody>
        {{#each categories}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.category}}</td>
      <td><img src="/imageUploads/{{this.image}}" alt="category" style="width:40px ;"> </td>
      
      <td>
        
         <a class="btn btn-info btn-sm "  href="/admin/categories/edit-category/{{this._id}}" role="button" >
        <i class="bi bi-pencil-square"></i></i> </a>
      
         <a class="btn btn-danger  btn-sm"  href="/admin/categories/delete-category/{{this._id}}" role="button" onclick="return confirm('Delete Category {{this.category}}')" >
         <i class="bi bi-trash"></i></i> </a>

      </td>    
    </tr>
    {{/each}}

  </tbody>
</table>
