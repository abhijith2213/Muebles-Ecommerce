<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-template="vertical-menu-template-free">


<div class="layout-page m-3">
   <div class="table-top" style="margin-top: 30px;
    width: -webkit-fill-available;">
<div class="table-responsive">
<table class="table table-hover  table-bordered  rounded p-2 align-middle" id="Table">
     <thead class="">
    <tr>
      <th scope="col">OrderID</th>
      <th scope="col"> Customer Name</th>
      
      <th scope="col">Date</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment Method</th>
      {{!-- <th scope="col">Status</th> --}}
      <th scope="col">Order Status</th>
      <th scope="col">Manage Order</th>
    </tr>
  </thead>
    <tbody class="text-center">
       {{#each orders}}
    <tr>
      
      <td>{{this._id}}</td>
      <td>{{this.deliveryDetails.firstName}}</td>
      <td class="text-truncate" style="max-width: 148px;">{{this.date}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
      

      <td>

        {{#if_eq this.orderStatus "Cancelled"}}
             <span class="badge bg-danger rounded-pill">{{this.orderStatus}}</span>         
          {{else}}         
          <span class="badge bg-success rounded-pill ">{{this.orderStatus}}</span>           
          {{/if_eq}}

          {{#if_eq this.orderStatus "delivered"}}
          <span class="badge bg-warning rounded-pill">{{this.orderStatus}}</span>
          {{/if_eq}}

        {{!-- <span class="text-white bg-warning rounded-pill p-2" style="font-size: 13px;">{{this.orderStatus}}</span> --}}
        </td>
      
      <td >     
         <a class="btn btn-info btn-sm mt-2"  href="/admin/viewOrders/edit/{{this._id}}" role="button" >
        <i class="bi bi-pencil-square"></i></i>EDIT</a>
      </td>    
    </tr>
    {{/each}}
   

  </tbody>
</table>
</div>
</div>
</div>
</html>
